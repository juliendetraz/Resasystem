<h1>Listing calendars</h1>

<table>
  <tr>
    <th>Offer</th>
    <th>Start date</th>
    <th>End date</th>
    <th>Availability type</th>
  </tr>

<% @calendars.each do |calendar| %>
  <tr>
    <td><%=h calendar.offer_id %></td>
    <td><%=h calendar.start_date %></td>
    <td><%=h calendar.end_date %></td>
    <td><%=h calendar.availability_type %></td>
    <td><%= link_to 'Show', calendar %></td>
    <td><%= link_to 'Edit', edit_calendar_path(calendar) %></td>
    <td><%= link_to 'Destroy', calendar, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

