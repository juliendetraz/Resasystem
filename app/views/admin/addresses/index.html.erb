<h1>Listing addresses</h1>

<table>
  <tr>
    <th>Street</th>
    <th>Complement</th>
    <th>Zip</th>
    <th>State province country</th>
    <th>Other address details</th>
    <th>City</th>
    <th>Country</th>
    <th>Gmap latitude</th>
    <th>Gmap longitude</th>
  </tr>

<% @addresses.each do |address| %>
  <tr>
    <td><%=h address.street %></td>
    <td><%=h address.complement %></td>
    <td><%=h address.zip %></td>
    <td><%=h address.state_province_country %></td>
    <td><%=h address.other_address_details %></td>
    <td><%=h address.city %></td>
    <td><%=h address.country %></td>
    <td><%=h address.gmap_latitude %></td>
    <td><%=h address.gmap_longitude %></td>
    <td><%= link_to 'Show', address %></td>
    <td><%= link_to 'Edit', edit_address_path(address) %></td>
    <td><%= link_to 'Destroy', address, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New address', new_address_path %>