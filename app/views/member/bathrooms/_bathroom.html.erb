<% @bathroom = room_type unless @bathroom %>
<div class="line_room" id="line_room_<%= @bathroom.room_id %>">
  <div class="col_room_type">
    <strong><%= t('member.room.rooms_type.bathroom') %></strong>
  </div>
  <div class="col_room_submit">
    <%= button_to '&nbsp;'.html_safe,
                member_room_path(I18n.locale, @bathroom.room_id),
                :remote => true,
                :method => :delete,
                :confirm => t('are_you_sure'),
                :class => 'destroy_button' %>
  </div>
  <div class="col_room_offers">
    <%= "#{t("member.bathroom.has_bath")}<br />".html_safe if @bathroom.has_bath %>
    <%= "#{t("member.bathroom.has_toilets")}<br />".html_safe if @bathroom.has_toilets %>
    <%= t("member.bathroom.has_shower") if @bathroom.has_shower %>
  </div>
</div>