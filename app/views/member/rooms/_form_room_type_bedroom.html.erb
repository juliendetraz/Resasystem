<% @room = room if defined?(room) %>
<div id="form_line_room_<%= room.id %>">
  <% form_remote_for :bedroom, :url => member_room_bedrooms_path(:room_id => @room), :update => "form_line_room_#{@room.id}" do |f| %>
    <%= f.hidden_field :room_id, :value => @room.id %>
  
    <div class="line_room" id="line_room_<%= @room.id %>" style="height:30px;">
      <div class="col_room_type">
        <%= t("member.room.rooms_type.#{@room.room_type}") %>
      </div>
      <div style="float:right;">
        <%= f.submit t('member.bedroom.add.submit') %>
      </div>
      <div class="col_room_offers">
        <%= f.label :beds_simple_quantity, t('member.bedroom.bedrooms_type.beds_simple_quantity') %>
        <%= f.select :beds_simple_quantity, options_for_select(0..10), {:include_blank => true} %>
      </div>
    </div>
  <% end %>
</div>
