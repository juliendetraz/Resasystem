<% @livingroom = room_type unless @livingroom %>
<div class="line_room" id="line_room_<%= @livingroom.room_id %>">
  <div class="col_room_type">
    <strong><%= t('member.room.rooms_type.livingroom') %></strong>
  </div>
  <div class="col_room_submit">
    <%= button_to '&nbsp;'.html_safe,
                  member_room_path(I18n.locale, @livingroom.room_id),
                  :remote => true,
                  :method => :delete,
                  :confirm => t('are_you_sure'),
                  :class => 'destroy_button' %>
  </div>
  <div class="col_room_offers">
    <%= t("member.livingroom.livingroom") %>
  </div>
</div>