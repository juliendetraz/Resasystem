<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="fr" dir="ltr" lang="fr-FR">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title><%= yield :title %><%= t("#{get_module_name}.title") %> - Resasystem</title>
    <base href="<%= root_url %>" />
    <%= stylesheet_link_tag 'style' %>
    <%= javascript_include_tag :defaults %>
    <%= javascript_include_tag "http://maps.google.com/maps/api/js?sensor=false&language=#{I18n.locale}" %>
    <!--//#&key=ABQIAAAAlElFxz29181IhLSoFhgbWxT2yXp_ZAY8_ufC3CFXhHIE1NvwkxSSXvmjx5BLsolNvzIE7TfFoNTGwg//-->
    <%= javascript_include_tag 'google/maps/fluster2/Fluster2.packed' %>
    <%= javascript_include_tag 'google/maps/labeled_marker/markerwithlabel_packed' %>
    <%= javascript_include_tag 'google/maps/googlemap' %>
    <%= csrf_meta_tag %>
    <%= yield :additional_css %>
    <%= yield :additional_js %>
  </head>
  <body>
    <div id="container">
      <div id="header" class="header-member">
        <%= link_to '<span><h1>Resasystem</h1></span>'.html_safe, get_module_url("%_root"), :title => t("homepage.homepage") %>
        <ul id="header_menu">
          <li id=""><%= link_to t("homepage.homepage"), get_module_url("%_root"), :title => t("homepage.homepage") %></li>
          <li id=""><%= link_to t("homepage.advantages"), get_module_path("%_ads"), :title => t("homepage.advantages") %></li>
          <li id=""><%= link_to t("homepage.subscription"), get_module_path("%_ads"), :title => t("homepage.subscription") %></li>
        </ul>
        <%= link_to t("homepage.search_ad"), get_module_path("%_ads"), :title => t("homepage.search_ad"), :id => 'header_menu-item-last' %>
      </div> <!-- #header -->
      <div id="headbar" class="headbar-member">
        <%= devise_user_signed_in? ? render(:partial => "#{get_module_name}/users/headbar_logged") : render(:partial => "#{get_module_name}/users/headbar_log_in") %>
      </div> <!-- #headbar -->
      <div id="content">
        <% flash.each do |key, msg| %>
          <%= content_tag :div, msg, :id => key %>
        <% end %>
        <%= yield %>
      </div> <!-- #content -->
      <div id="footer">
        <div id="footer_lang_switcher">
          <ul>
            <%= locale_switch_tag :locale => 'fr' %>
            <%= locale_switch_tag :locale => 'en' %>
          </ul>
          <div id="footer_links">
            <ul>
              <li><a href="#" title="Qui sommes nous">Qui sommes nous</a> | </li>
              <li><a href="#" title="Partenaires">Partenaires</a> | </li>
              <li><a href="#" title="Conditions générales de ventes">Conditions générales de ventes</a> | </li>
              <li><a href="#" title="Données personnelles">Données personnelles</a> | </li>
              <li><a href="#" title="Contact">Contact</a> | </li>
              <li><a href="#" title="Annulation de réservation">Annulation de réservation</a></li>
            </ul>
          </div> <!-- #footer_links -->
          <div id="footer_copyright">
            <p>BandBCS // Resasystem - Copyright &copy; 2009-2010 - Tous droits réservés</p>
          </div> <!-- #footer_copyright -->
        </div> <!-- #footer_lang_switcher -->
        <div id="footer_logo_bcs"><a href="#" title="Band BCS"><span>Band BCS</span></a></div>
      </div> <!-- #footer -->
    </div> <!-- #container -->
    <%= yield :additional_js_bottom %>
    <script type="text/javascript">
      //<![CDATA[
        document.observe("dom:loaded", function(){
          loadMap('<%= get_module_path('search_%_housings') %>', '');
        })
      //]]>
    </script>
  </body>
</html>
