<div id="headbar_logged">
  <div id="headbar_logged_left">
    <strong><%= current_devise_user.full_name %></strong>
  </div>
  <div id="headbar_logged_right">
    <div id="sign_out_button" class="sign_out_button-client">
      <%= link_to '<span>'.html_safe + t("devise.sessions.link_sign_out") + '</span>'.html_safe, destroy_session_path(resource_name), :title => t("devise.sessions.link_sign_out") %>
    </div>
    <ul id="headbar_logged_icons">
      <li id="news-client">
        <%= link_to '<span class="nb">0</span><span class="hidden">'.html_safe + t("news.news_link") + '</span>'.html_safe, get_module_path("%_cuser", current_devise_user), :title => t("news.news_link") %>
      </li>
      <li id="resa-client">
        <%= link_to '<span class="nb">0</span><span class="hidden">'.html_safe + t("users.your_reservations_link") + '</span>'.html_safe, get_module_path("%_cuser", current_devise_user), :title => t("users.your_reservations_link") %>
      </li>
      <li id="email-client">
        <%= link_to '<span class="nb">0</span><span class="hidden">'.html_safe + t("messages.your_messages_link") + '</span>'.html_safe, get_module_path("%_cuser", current_devise_user), :title => t("messages.your_messages_link") %>
      </li>
      <li id="heart-client">
        <%= link_to '<span class="nb">0</span><span class="hidden">'.html_safe + t("users.favorites_link") + '</span>'.html_safe, get_module_path("%_cuser", current_devise_user), :title => t("users.favorites_link") %>
      </li>
      <li id="profile-client">
        <%= link_to '<span class="hidden">'.html_safe + t("users.your_profile_link") + '</span>'.html_safe, get_module_path("%_cuser", current_devise_user), :title => t("users.your_profile_link") %>
      </li>
    </ul>
  </div>
</div>