<div id="search">

  <%= form_tag url_for(:controller => params[:controller]), :method => :get do %>
    <ul>
      <li><input id="search" name="search" type="text" value="<%= params[:search] %>"/></li>
      <li><%= submit_tag _("Search"), :name => nil %></li>
    </ul>
    <% hidden_params.each do |field| %>
      <%= field %>
    <% end %>
  <% end %>

</div>
